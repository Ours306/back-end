import <%= entity %> from '../../../model/<%= entity.toLowerCase() %>/<%= entity.toLowerCase() %>'

class <%= entity %>Handler {
    constructor() {
        this.save = this.save.bind(this);
        this.delete = this.delete.bind(this);
        this.edit = this.edit.bind(this);
        this.findAll = this.findAll.bind(this);
        this.findById = this.findById.bind(this);
    }

    async save(req, res, next) {
        let <%= entity.toLowerCase() %> = <%= entity %>.build({
            ...req.body
        }),

        try {
            <%= entity.toLowerCase() %> = await <%= entity.toLowerCase() %>.save();

            res.send(<%= entity.toLowerCase() %>)
        } catch (error) {
            next(error);
        }
    }

    async delete(req, res, next) {
        let id = {...req.body}.id;
        try {
            let result = await <%= entity %>.destroy({
                where: {
                    id: id
                }
            })
            res.send({result});
        } catch (error) {
            next(error);
        }
    }

    async edit(req, res, next) {
        try {
            let <%= entity.toLowerCase() %> = await <%= entity %>.update({
            ...req.body
            }, {
                where: {
                    id: { ...req.body }.id
                }
            });

            res.send(<%= entity.toLowerCase() %>)
        } catch (error) {
            next(error);
        }
    }

    async findAll(req, res, next) {
        try {
            let <%= entity.toLowerCase() %> = await <%= entity %>.findAll();

            res.send(<%= entity.toLowerCase() %>);
        } catch (error) {
            next(error);
        }
    }

    async findById(req, res, next) {
        let id = req.query.id;
        try {
            let <%= entity.toLowerCase() %> = await <%= entity %>.findAll({
                where: {
                    id: req.query.id
                }
            });

            res.send(<%= entity.toLowerCase() %>);
        } catch (error) {
            next(error);
        }
    }
}

export default new <%= entity %>Handler();